{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with OpenSSL (Linux)",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${fileDirname}/client.c",          // 主文件
                "${fileDirname}/diffie-hellman.c",  // 添加实现文件
                "-o",
                "${fileDirname}/client",            // 移除 .exe 后缀
                "-I${fileDirname}",                // 包含当前目录
                "-I/usr/include/openssl",          // Linux OpenSSL 头文件路径
                "-lcrypto",                        // 直接链接库
                "-Wall"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",  // 移除 .exe
                "-I${fileDirname}",                          // 包含当前目录
                "-lcrypto"                                   // 添加 OpenSSL 链接
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debugger generated task."
        }
    ]
}